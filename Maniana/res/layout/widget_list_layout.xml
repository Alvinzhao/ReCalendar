<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_top_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/widget_list_top_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dip"
        android:background="@drawable/widget_toolbar_background_right"
        android:padding="0dip" >

        <TextView
            android:id="@+id/widget_list_top_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:textColor="#ff666666"
            android:paddingLeft="4dip"
            android:text="TODAY"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dip"
            android:background="#00000000"
            android:orientation="horizontal"
            android:padding="0dip" >

            <ImageButton
                android:id="@+id/widget_list_top_toolbar_add_by_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:longClickable="false"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/widget_add_by_text" >
            </ImageButton>

            <ImageButton
                android:id="@+id/widget_list_top_toolbar_add_by_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:longClickable="false"
                android:paddingLeft="8dip"
                android:paddingRight="5dip"
                android:src="@drawable/widget_add_by_voice" >
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/widget_list_item_list"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="vertical"
            android:paddingRight="2dip" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_list_right_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dip"
            android:background="@drawable/widget_toolbar_background_right"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/widget_list_right_toolbar_add_by_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:longClickable="false"
                android:paddingBottom="12dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:paddingTop="2dip"
                android:src="@drawable/widget_add_by_voice" >
            </ImageButton>

            <ImageButton
                android:id="@+id/widget_list_right_toolbar_add_by_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:longClickable="false"
                android:paddingBottom="10dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:paddingTop="8dip"
                android:src="@drawable/widget_add_by_text" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>