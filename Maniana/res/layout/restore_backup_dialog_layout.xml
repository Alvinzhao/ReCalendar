<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restore_backup_top_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffaaaaaa"
    android:minWidth="360dp"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/restore_backup_web_view"
        android:layout_width="fill_parent"
        android:layout_height="340dip"
        android:layout_margin="10dip"
        android:background="#ffffffff"
        android:paddingRight="10dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/restore_backup_merge"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:text="Merge" />

        <Button
            android:id="@+id/restore_backup_replace"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:text="Replace" />

        <Button
            android:id="@+id/restore_backup_cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>